<?xml version="1.0" encoding="UTF-8" ?>
<root>
  <log>
    
    <!-- 日志级别: DEBUG / INFO / ERROR -->
    <log_level>INFO</log_level>
    <log_file_name>log_client</log_file_name>
    <log_file_path>../log/</log_file_path>
    <log_max_file_size>1024000</log_max_file_size>
    <log_sync_internal>500</log_sync_internal>
  </log>

  <thread>
    <io_threads>4</io_threads>
    <worker_threads>16</worker_threads>
  </thread>

  <server>
    <port>8080</port>
    <max_connections>10000</max_connections>
    <timeout_ms>5000</timeout_ms>
  </server>
</root>