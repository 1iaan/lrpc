<?xml version="1.0" encoding="UTF-8" ?>
<root>
  <log>
    
    <!-- 日志级别: DEBUG / INFO / ERROR -->
    <!-- <log_level>INFO</log_level> -->
    <log_level>ERROR</log_level>

    <!-- 输出到哪里: console / file / both -->
    <log_output>both</log_output>

    <!-- 日志文件配置 -->
    <log_file>

    </log_file>
  </log>

  <thread>
    <!-- 主从 Reactor 模式中的 IO 线程数量 -->
    <io_threads>4</io_threads>

    <!-- RPC 业务处理线程池（WorkerPool） -->
    <worker_threads>16</worker_threads>
  </thread>

  <server>
    <port>8080</port>
    <max_connections>10000</max_connections>
    <timeout_ms>5000</timeout_ms>
  </server>
</root>